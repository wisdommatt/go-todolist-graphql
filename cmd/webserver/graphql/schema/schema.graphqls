# GraphQL schema example
#
# https://gqlgen.com/getting-started/
scalar Time

type Todo {
  id: ID!
  task: String!
  status: String!
  timeAdded: Time
}

input NewTodo {
  task: String!
  status: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}

type Query {
  getTodos(status: String): [Todo!]!
}
